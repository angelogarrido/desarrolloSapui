<mvc:View controllerName="ns.sapui5.controller.App"
        xmlns="sap.m" 
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        displayBlock="true">
            <Shell>
                 <App>
                    <pages>
                         <Page title="{i18n>appTitle}">
                            <headerContent>
                                 <Button id="helloDialogHeader"
                                        icon="sap-icon://action" 
                                         press=".onOpenDialogHeader" 
                                          class="sapUiSmallMarginEnd"/>
                            </headerContent>
                               <content>
                                  <mvc:XMLView viewName="ns.sapui5.view.HelloPanel"/>
                                  <core:Fragment fragmentName="ns.sapui5.view.Form01" type="XML"/>
                              </content>
                        </Page>
                    </pages>
                </App>
            </Shell>
</mvc:View>